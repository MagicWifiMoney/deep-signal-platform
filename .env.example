# ===========================================
# Deep Signal Platform - Environment Variables
# ===========================================

# --- Hetzner Cloud (required for instance provisioning) ---
HETZNER_API_TOKEN=

# --- Cloudflare (required for DNS management) ---
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# --- Slack App (required for Slack integration) ---
# Get these from https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=
SLACK_APP_TOKEN=

# --- Config Service (shared secret for API-to-API auth) ---
# Generate with: openssl rand -hex 32
CONFIG_API_SECRET=

# --- Clerk Authentication (required for user auth) ---
# Get from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# --- Convex (required for database) ---
NEXT_PUBLIC_CONVEX_URL=

# --- AI Providers (optional, used for company analysis) ---
GEMINI_API_KEY=
OPENAI_API_KEY=
